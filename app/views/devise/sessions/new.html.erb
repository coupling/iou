<h1><%=@title="Sign in"%></h1>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, :type => "email" %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= link_to "Forgot it?", new_password_path(resource_name) if devise_mapping.recoverable? %>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end -%>

<div class="actions">
  <%= f.submit "Sign in" %>
</div>
<% end %>

<p>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %></p>

<%= render :partial => "devise/shared/links" %>
