<h1><%=@title="Sign up"%></h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :size => 15 %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, :type => :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, :size => 50 %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<p>Already have an account? <%= link_to "Sign in", new_session_path(resource_name) %></p>

<%= render :partial => "devise/shared/links" %>

