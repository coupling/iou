<h1><%=@title="Users"%></h1>

<p><%= link_to 'New User', new_user_path %></p>

<ul>
<% @users.each do |user| %>
  <li>
    <%= link_to user.name, user %>
    <% if user.friends %>
    <ul>
      <% user.friends do |friend| %>
        <li><%= link_to friend.name, friend %></li>
      <% end %>
    </ul>
    <% end %>
  </li>
<% end %>
</ul>


