%h1=h @title = @user.name

%p= link_to "Edit", edit_user_path(@user)

%h2 Friends

%table
  %thead
    %th User
    %th= "Owes %s" % h(@user.name)
    %th= "%s is owed" % h(@user.name)
  %tbody
    - for user, debt in @debts
      %tr
        %td= link_to h(user.name), user
        %td= debt > 0 ? '' : "#{debt.abs} €"
        %td= debt < 0 ? '' : "#{debt.abs} €"

%h2 Recent Bills
%ul
  - for bill in @bills
    %li
      = link_to h(bill.past_phrase), bill
      = h bill.title.blank? ? '' : "(#{bill.title})"
      = h time_ago_in_words(bill.transaction_at)
      ago

