<h1><%=@title=@friend.name %></h1>

<% if @friend.debts.empty? %>
<p>Nothing here yet&hellip;</p>
<% else %>

<% if @owes_you > 0 %>
<p>Owes you <%= money(@owes_you) %></p>
<% elsif @owes_you < 0 %>
<p>You owe him/her <%= money(@owes_you.abs) %></p>
<% end %>

<h2>Bills</h2>
<ul>
<% @friend.debts.each do |d| %>
  <li>
    <%=link_to(d.bill.description, d.bill)%>:
    <% if d.person_to == current_user %>
    you owe him/her <%= money(d.amount) %>
    <% elsif d.person_from == current_user %>
    owes you <%= money(d.amount) %>
    <% elsif d.person_from == @friend %>
    <%=d.person_to.name%> owes him/her <%= money(d.amount) %>
    <% elsif d.person_to == @friend %>
    owes <%= money(d.amount) %> to <%= d.person_from.name %>
    <% end %>
  </li>
<% end %>
</ul>

<% end %>

<p><%= button_to 'Destroy', friend_path(@friend), :method => 'delete', :confirm => "Are you sure you want to destroy this friend and all his bills?" %></p>

<nav class="links">
  <ul>
    <li><%= link_to 'Edit', edit_friend_path(@friend) %></li>
    <li><%= link_to 'All friends', friends_path %></li>
  </nav>
</nav>
