<h1><%=@title="Bills"%></h1>

<table>
  <tr>
    <th></th>
    <th>Amount</th>
    <th>Users from</th>
    <th>Users to</th>
    <th>Date</th>
  </tr>

<% @bills.each do |bill| %>
  <tr>
    <td><%= link_to(bill.description, bill) %></td>
    <td><%= bill.amount %></td>
    <td><%= bill.users_from.map{ |u| u.name }.join(', ') %></td>
    <td><%= bill.users_to.map  { |u| u.name }.join(', ') %></td>
    <td><%= bill.date %></td>
    <td><%= bill.shared?.inspect %></td>
    <td><%= bill.users.length %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Bill', new_bill_path %>
