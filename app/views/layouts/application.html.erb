<!DOCTYPE html>
<html>
<head>
  <title><%= @title ? "#{@title} - " : "" %>Iou</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="page">
  <header>
    IOU
  </header>

  <nav>
    <ul>
      <li><%=link_to('Bills', bills_path) %></li>
      <li><%=link_to('Users', users_path) %></li>
      <li><%=link_to('Debts', debts_path) %></li>
      <% if current_user %>
      <li><%=link_to("Me, #{current_user.name}", user_path(current_user)) %></li>
      <li><%=link_to("Sign out", destroy_user_session_path) %></li>
      <% end %>
    </ul>
  </nav>

  <% if notice %>
  <p class="notice"><%= notice %></p>
  <% end %>
  <% if alert %>
  <p class="alert"><%= alert %></p>
  <% end %>

  <div id="content">
<%= yield %>
  </div>

</div>
</body>
</html>
